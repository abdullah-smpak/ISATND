<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bk"
    android:paddingTop="20dp"
    android:paddingLeft="20dp"
    tools:context="com.schoolerp.abdullah.schoolerp.Home">
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginBottom="-40dp">

    <ImageView
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="80dp"
        android:src="@drawable/welcome"
        android:layout_width="160dp"
        android:layout_height="100dp" />

            <ImageView
                android:id="@+id/logout"
                android:src="@drawable/signout"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"/>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/Empolyees"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/square"
            android:layout_height="90dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/p1"
                android:layout_width="100dp"
                android:layout_height="80dp"
                />
            <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="35dp"
                android:text="Employees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/Sales"
            android:gravity="left"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/square"
            android:layout_height="90dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/atn"
                android:layout_width="100dp"
                android:layout_height="80dp"
                />
              <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="35dp"
                android:text="Sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/Purchase"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/square"
            android:layout_height="90dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/fee"
                android:layout_width="100dp"
                android:layout_height="80dp"
                />
            <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="35dp"
                android:text="Purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/PendingSales"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/square"
            android:layout_height="90dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/fee"
                android:layout_width="100dp"
                android:layout_height="80dp"
                />
            <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="35dp"
                android:text="Pending Sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/PendingPurcahse"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/square"
            android:layout_height="90dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/home"
                android:layout_width="100dp"
                android:layout_height="80dp"
                />
            <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="35dp"
                android:text="Pending Purcahse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/Expense"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/square"
            android:layout_height="90dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/fee"
                android:layout_width="100dp"
                android:layout_height="80dp"
                />
            <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="35dp"
                android:text="Expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/Assests"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/square"
            android:layout_height="90dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/fee"
                android:layout_width="100dp"
                android:layout_height="80dp"
                />
            <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="35dp"
                android:text="Assests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>



</LinearLayout>
</ScrollView>
</RelativeLayout>
