<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_expense"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@color/bk"
    tools:context="com.schoolerp.abdullah.schoolerp.Purchase">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tot"
        android:layout_below="@+id/empq"
        android:layout_marginTop="30dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/TODAY"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/TODAYVAL"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tot"
        android:id="@+id/present"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M.T.D"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/MTD"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/MTDVAL"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/present"
        android:id="@+id/absent"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y.T.D"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/YTD"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/YTDVAL"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/empq"
        android:layout_marginTop="142dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expense"
            android:layout_marginLeft="100dp"
            android:textSize="35dp"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:id="@+id/EMP"
            android:layout_alignParentLeft="true"/>

    </LinearLayout>


</RelativeLayout>
