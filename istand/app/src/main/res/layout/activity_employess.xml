<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_employess"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bk"
    android:padding="30dp"
    tools:context="com.schoolerp.abdullah.schoolerp.Employess">


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/empq"
    android:layout_marginTop="90dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employess Record"
        android:layout_marginLeft="15dp"
        android:textSize="35dp"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:id="@+id/EMP"
        android:layout_alignParentLeft="true"/>

</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tot"
        android:layout_below="@+id/empq"
    android:layout_marginTop="30dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:id="@+id/TOTAL"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:id="@+id/TOTALVAL"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>

</LinearLayout>


<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tot"
        android:id="@+id/present"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Present"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/PRESENT"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/PRESENTVAL"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>

    </LinearLayout>


<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/present"
        android:id="@+id/absent"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Absent"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/ABSENT"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/ABSENTVAL"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>

    </LinearLayout>


<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/absent"
        android:id="@+id/Late"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Late"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/LATE"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/LATEVAL"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>

    </LinearLayout>


<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Late"
        android:id="@+id/leave"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leave"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/LEAVE"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/LEAVEVAL"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
